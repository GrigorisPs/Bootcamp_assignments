<%- include('partials/head')%>
    <%- include('partials/navbar') %>
        <div class="container ">
            <div class="row d-flex justify-content-center align-items-center mt-5">
                <div class="col-4 col-md-4 offset-1   ">
                    <form action="" method="POST">
                        <div class="form-group">

                            <label for="first_name" class="text-center"></label>
                            <input type="text" class="form-control bg-light" placeholder="Enter first name"
                                id="first_name" name="first_name">
                        </div>

                        <div class="form-group">
                            <label for="last_name" class="text-center"></label>
                            <input type="text" class="form-control" placeholder="Enter last name" id="last_name"
                                name="last_name">
                        </div>

                        <div class="form-group">
                            <label for="date_of_birth" class="text-center"></label>
                            <input type="date" class="form-control bg-light" placeholder="Date of birth"
                                id="date_of_birth" name="date_of_birth">
                        </div>

                        <div class="form-group">

                            <label for="tuition_fees" class="text-center"></label>
                            <input type="number" class="form-control bg-light" placeholder="Tuition fees"
                                id="tuition_fees" name="tuition_fees">
                        </div>
                        <div class=" input-group my-2 ">
                            <button type="submit" class="btn btn-primary btn-sm p-2 mt-2">Add new student</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
        <div id="message">
            <%= message %>
        </div>

        <%- include('partials/footer')%>